#!/bin/bash
NAME="admin"
PATHHOME="/home/dev2/Administrables/admin"
PATHENV="$PATHHOME/env"
PATHDJANGO="$PATHHOME"
USER="dev2"
GROUP="dev2"
WORKERS=3
DJANGOWSGI="admin.wsgi"
IP=192.168.1.16
PORT=8006
LEVEL="debug"
echo "Starting app $NAME"
source $PATHENV/bin/activate
cd $PATHDJANGO
pip install -r requirements.txt
exec gunicorn $DJANGOWSGI --bind=$IP:$PORT --workers=$WORKERS --user=$USER --group=$GROUP --log-level=$LEVEL
